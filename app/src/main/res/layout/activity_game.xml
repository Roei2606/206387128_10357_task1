<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gameActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/street_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/ic_launcher_background"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/first_layout"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:paddingTop="60dp"
        android:paddingBottom="80dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire10"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_firemen1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/fireman" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/second_layout"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="80dp"
        android:weightSum="5">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire11"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_firemen2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fireman" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/third_layout"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_alignParentEnd="true"
        android:paddingTop="60dp"
        android:paddingBottom="80dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_fire12"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:src="@drawable/fire" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_firemen3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/fireman"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_left"
            android:layout_width="@dimen/BTTN_size"
            android:layout_height="wrap_content"

            android:text="@string/left_BTTN_text" />

        <View
            android:layout_width="200dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_right"
            android:layout_width="@dimen/BTTN_size"
            android:layout_height="wrap_content"
            android:text="@string/right_BTTN_text" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>